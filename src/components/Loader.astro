---
import { url } from '@/utils/url';
---

<div id="site-loader" class="site-loader">
  <div class="loader-content">
    <img src={url('/assets/images/logo.svg')} alt="Cargando..." class="loader-logo" />
  </div>
</div>

<style>
  .site-loader {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(13, 57, 99, 0.85);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 99999999999!important;
    transition: opacity 0.5s ease, visibility 0.5s ease;
  }
  
  .site-loader.hidden {
    opacity: 0;
    visibility: hidden;
  }
  
  .loader-content {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .loader-logo {
    width: 150px;
    height: auto;
    animation: spin 2s linear infinite;
  }
  
  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
  
  @media (max-width: 575.98px) {
    .loader-logo {
      width: 100px;
    }
  }
</style>

<script is:inline>
  window.addEventListener('load', () => {
    // Esperar un momento para asegurar que todo esté completamente cargado
    setTimeout(() => {
      const loader = document.getElementById('site-loader');
      if (loader) {
        loader.classList.add('hidden');
        // Remover el loader del DOM después de la animación
        setTimeout(() => {
          loader.remove();
        }, 500);
      }
    }, 300);
  });
</script>


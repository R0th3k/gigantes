---
import { url } from '@/utils/url';

interface Slide {
  image: string;
  title?: string;
  description?: string;
  showOverlay?: boolean;
  showText?: boolean;
}

interface Props {
  slides: Slide[];
}

const { slides } = Astro.props;

// Normalizar slides con valores por defecto
const normalizedSlides = slides.map(slide => ({
  ...slide,
  showOverlay: slide.showOverlay !== undefined ? slide.showOverlay : true,
  showText: slide.showText !== undefined ? slide.showText : true,
}));
---

<section class="hero">
  <div class="swiper hero-swiper">
    <div class="swiper-wrapper">
      {normalizedSlides.map((slide) => (
        <div class="swiper-slide">
          <div class="hero-slide">
            <div class="hero-image">
              <img src={url(slide.image)} alt={slide.title || 'Slide'} data-swiper-parallax="-23%" />
            </div>
            {slide.showOverlay===false && <div class="hero-overlay"></div>}
            {slide.showText===false && (slide.title || slide.description) && (
              <div class="hero-content">
                <div class="container">
                  {slide.title && (
                    <h1 class="hero-title" data-swiper-parallax="-100" data-swiper-parallax-opacity="0">
                      {slide.title}
                    </h1>
                  )}
                  {slide.description && (
                    <p class="hero-description" data-swiper-parallax="-200" data-swiper-parallax-opacity="0">
                      {slide.description}
                    </p>
                  )}
                </div>
              </div>
            )}
          </div>
        </div>
      ))}
    </div>
    <div class="swiper-pagination"></div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>
</section>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    // Inicializar Swiper con efecto parallax
    if (typeof Swiper !== 'undefined') {
      const heroSwiper = new Swiper('.hero-swiper', {
        loop: true,
        autoplay: {
          delay: 5000,
          disableOnInteraction: false,
        },
        pagination: {
          el: '.swiper-pagination',
          clickable: true,
        },
        navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev',
        },
        effect: 'fade',
        fadeEffect: {
          crossFade: true
        },
        parallax: true,
        speed: 1000
      });
    }
  });
</script>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" defer></script>

<style>
  .hero {
    position: relative;
    min-height: 900px;
    overflow: hidden;
  }
  
  .hero-swiper {
    width: 100%;
    height: 100%;
    min-height: 900px;
  }
  
  .hero-slide {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .hero-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 120%;
    z-index: 1;
    overflow: hidden;
  }
  
  .hero-image img {
    width: 100%;
    height: 120%;
    object-fit: cover;
    object-position: center;
  }
  
  .hero-title,
  .hero-description {
    transition: opacity 0.6s ease-out;
  }
  
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to bottom,
      rgba(13, 57, 99, 0.7) 0%,
      rgba(13, 57, 99, 0.5) 50%,
      rgba(13, 57, 99, 0.8) 100%
    );
    z-index: 2;
  }
  
  .hero-content {
    position: relative;
    z-index: 3;
    width: 100%;
    text-align: left;
    color: white;
    padding: 4rem 2rem;
  }
  
  .hero-content .container {
    text-align: left;
  }
  
  .hero-title {
    font-family: "Bebas Neue", sans-serif;
    font-size: 4.5rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 3px;
    margin-bottom: 1.5rem;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
    line-height: 1.1;
    text-align: left;
  }
  
  .hero-description {
    font-family: "Arimo", sans-serif;
    font-size: 1.5rem;
    text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.5);
    max-width: 700px;
    margin: 0;
    text-align: left;
  }
  
  .swiper-pagination {
    bottom: 30px !important;
  }
  
  .swiper-pagination-bullet {
    background: white;
    opacity: 0.5;
    width: 12px;
    height: 12px;
  }
  
  .swiper-pagination-bullet-active {
    opacity: 1;
    background: var(--bs-warning);
  }
  
  .swiper-button-next,
  .swiper-button-prev {
    color: white;
    width: 50px;
    height: 50px;
  }
  
  .swiper-button-next:after,
  .swiper-button-prev:after {
    font-size: 24px;
  }
  
  .swiper-button-next:hover,
  .swiper-button-prev:hover {
    color: var(--bs-warning);
  }
  
  @media (max-width: 991.98px) {
    .hero {
      margin-top: -120px;
      padding-top: 120px;
      min-height: 500px;
    }
    
    .hero-swiper,
    .hero-slide {
      min-height: 500px;
    }
    
    .hero-title {
      font-size: 3rem;
    }
    
    .hero-description {
      font-size: 1.25rem;
    }
  }
  
  @media (max-width: 575.98px) {
    .hero {
      margin-top: -100px;
      padding-top: 100px;
      min-height: 400px;
    }
    
    .hero-swiper,
    .hero-slide {
      min-height: 400px;
    }
    
    .hero-title {
      font-size: 2.5rem;
      letter-spacing: 2px;
    }
    
    .hero-description {
      font-size: 1.1rem;
    }
    
    .swiper-button-next,
    .swiper-button-prev {
      display: none;
    }
  }
</style>

<script>
  // Declarar tipo para grecaptcha
  declare const grecaptcha: {
    ready: (callback: () => void) => void;
    execute: (siteKey: string, options: { action: string }) => Promise<string>;
  };
  
  // Site key de reCAPTCHA v3
  const RECAPTCHA_SITE_KEY = '6LdSLE4sAAAAABbYVbbIroSwlFfJ77-zzAkynUe7';
  
  // Funci√≥n para cargar el script de reCAPTCHA din√°micamente
  function loadRecaptchaScript(): Promise<void> {
    return new Promise((resolve, reject) => {
      // Verificar si ya est√° cargado y listo
      if (typeof (window as any).grecaptcha !== 'undefined' && 
          typeof (window as any).grecaptcha.ready === 'function') {
        (window as any).grecaptcha.ready(() => {
          resolve();
        });
        return;
      }
      
      // Verificar si el script ya existe en el DOM
      const existingScript = document.querySelector(`script[src*="recaptcha/api.js"]`);
      if (existingScript) {
        // Esperar a que grecaptcha est√© disponible
        let attempts = 0;
        const maxAttempts = 100; // 10 segundos m√°ximo (100 * 100ms)
        const checkInterval = setInterval(() => {
          attempts++;
          if (typeof (window as any).grecaptcha !== 'undefined' && 
              typeof (window as any).grecaptcha.ready === 'function') {
            clearInterval(checkInterval);
            (window as any).grecaptcha.ready(() => {
              resolve();
            });
          } else if (attempts >= maxAttempts) {
            clearInterval(checkInterval);
            reject(new Error('reCAPTCHA no se pudo cargar despu√©s de esperar'));
          }
        }, 100);
        return;
      }
      
      // Crear y cargar el script
      const script = document.createElement('script');
      script.src = `https://www.google.com/recaptcha/api.js?render=${RECAPTCHA_SITE_KEY}`;
      script.async = true;
      script.defer = true;
      
      script.onload = () => {
        // Esperar a que grecaptcha est√© completamente inicializado
        let attempts = 0;
        const maxAttempts = 50; // 5 segundos m√°ximo
        const checkRecaptcha = setInterval(() => {
          attempts++;
          if (typeof (window as any).grecaptcha !== 'undefined' && 
              typeof (window as any).grecaptcha.ready === 'function') {
            clearInterval(checkRecaptcha);
            (window as any).grecaptcha.ready(() => {
              resolve();
            });
          } else if (attempts >= maxAttempts) {
            clearInterval(checkRecaptcha);
            reject(new Error('reCAPTCHA no se pudo inicializar despu√©s de cargar el script'));
          }
        }, 100);
      };
      
      script.onerror = () => {
        reject(new Error('Error al cargar el script de reCAPTCHA. Verifica tu conexi√≥n a internet.'));
      };
      
      document.head.appendChild(script);
    });
  }
  
  document.addEventListener('DOMContentLoaded', async () => {
    // Cargar reCAPTCHA primero
    try {
      await loadRecaptchaScript();
      console.log('‚úÖ reCAPTCHA v3 cargado correctamente');
    } catch (error: any) {
      console.error('‚ùå Error al cargar reCAPTCHA:', error);
      // Continuar sin reCAPTCHA si hay error
    }
    const form = document.querySelector('.contacto-form') as HTMLFormElement;
    const nombreInput = document.getElementById('nombre') as HTMLInputElement;
    const emailInput = document.getElementById('email') as HTMLInputElement;
    const telefonoInput = document.getElementById('telefono') as HTMLInputElement;
    const mensajeInput = document.getElementById('mensaje') as HTMLTextAreaElement;
    
    // Funci√≥n para validar email
    function validateEmail(email) {
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      return emailRegex.test(email);
    }
    
    // Funci√≥n para validar tel√©fono (solo n√∫meros, espacios, guiones y par√©ntesis)
    function validatePhone(phone) {
      const phoneRegex = /^[0-9\s\-\(\)]+$/;
      return phoneRegex.test(phone) && phone.replace(/\D/g, '').length >= 10;
    }
    
    // Funci√≥n para validar nombre (solo letras y espacios)
    function validateName(name) {
      const nameRegex = /^[A-Za-z√Å√â√ç√ì√ö√°√©√≠√≥√∫√ë√±\s]+$/;
      return nameRegex.test(name) && name.trim().length >= 2;
    }
    
    // Funci√≥n para mostrar error
    function showError(input, errorId, message) {
      input.classList.add('error');
      input.classList.remove('valid');
      const errorElement = document.getElementById(errorId);
      if (errorElement) {
        errorElement.textContent = message;
      }
    }
    
    // Funci√≥n para mostrar √©xito
    function showSuccess(input, errorId) {
      input.classList.add('valid');
      input.classList.remove('error');
      const errorElement = document.getElementById(errorId);
      if (errorElement) {
        errorElement.textContent = '';
      }
    }
    
    // Deshabilitar mensajes de validaci√≥n nativos del navegador
    nombreInput.addEventListener('invalid', (e) => {
      e.preventDefault();
      nombreInput.setCustomValidity('');
    });
    
    // Validaci√≥n en tiempo real para nombre
    nombreInput.addEventListener('input', () => {
      nombreInput.setCustomValidity('');
      const value = nombreInput.value.trim();
      if (value === '') {
        showError(nombreInput, 'nombre-error', 'El nombre es requerido');
      } else if (!validateName(value)) {
        showError(nombreInput, 'nombre-error', 'El nombre solo debe contener letras y espacios');
      } else {
        showSuccess(nombreInput, 'nombre-error');
      }
    });
    
    // Deshabilitar mensajes de validaci√≥n nativos del navegador
    emailInput.addEventListener('invalid', (e) => {
      e.preventDefault();
      emailInput.setCustomValidity('');
    });
    
    // Validaci√≥n en tiempo real para email
    emailInput.addEventListener('input', () => {
      emailInput.setCustomValidity('');
      const value = emailInput.value.trim();
      if (value === '') {
        showError(emailInput, 'email-error', 'El email es requerido');
      } else if (!validateEmail(value)) {
        showError(emailInput, 'email-error', 'Ingresa un email v√°lido');
      } else {
        showSuccess(emailInput, 'email-error');
      }
    });
    
    // Deshabilitar mensajes de validaci√≥n nativos del navegador
    telefonoInput.addEventListener('invalid', (e) => {
      e.preventDefault();
      telefonoInput.setCustomValidity('');
    });
    
    // Validaci√≥n en tiempo real para tel√©fono (solo n√∫meros mientras escribe)
    telefonoInput.addEventListener('input', (e) => {
      telefonoInput.setCustomValidity('');
      // Permitir solo n√∫meros, espacios, guiones y par√©ntesis
      const target = e.target as HTMLInputElement;
      let value = target.value.replace(/[^0-9\s\-\(\)]/g, '');
      target.value = value;
      
      if (value === '') {
        showError(telefonoInput, 'telefono-error', 'El tel√©fono es requerido');
      } else if (!validatePhone(value)) {
        showError(telefonoInput, 'telefono-error', 'Ingresa un tel√©fono v√°lido (m√≠nimo 10 d√≠gitos)');
      } else {
        showSuccess(telefonoInput, 'telefono-error');
      }
    });
    
    // Deshabilitar mensajes de validaci√≥n nativos del navegador
    mensajeInput.addEventListener('invalid', (e) => {
      e.preventDefault();
      mensajeInput.setCustomValidity('');
    });
    
    // Validaci√≥n en tiempo real para mensaje
    mensajeInput.addEventListener('input', () => {
      mensajeInput.setCustomValidity('');
      const value = mensajeInput.value.trim();
      if (value === '') {
        showError(mensajeInput, 'mensaje-error', 'El mensaje es requerido');
      } else if (value.length < 10) {
        showError(mensajeInput, 'mensaje-error', 'El mensaje debe tener al menos 10 caracteres');
      } else {
        showSuccess(mensajeInput, 'mensaje-error');
      }
    });
    
    // Funci√≥n para mostrar mensaje del formulario
    function showFormMessage(message, type = 'success') {
      const messageDiv = document.getElementById('form-message');
      if (messageDiv) {
        messageDiv.className = `alert alert-${type === 'success' ? 'success' : 'danger'} d-block`;
        messageDiv.textContent = message;
        messageDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
        
        // Ocultar mensaje despu√©s de 5 segundos si es √©xito
        if (type === 'success') {
          setTimeout(() => {
            messageDiv.classList.add('d-none');
          }, 5000);
        }
      }
    }
    
    // Validaci√≥n y env√≠o del formulario
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      let isValid = true;
      
      // Validar nombre
      if (!validateName(nombreInput.value.trim())) {
        showError(nombreInput, 'nombre-error', 'El nombre es requerido y solo debe contener letras');
        isValid = false;
      }
      
      // Validar email
      if (!validateEmail(emailInput.value.trim())) {
        showError(emailInput, 'email-error', 'Ingresa un email v√°lido');
        isValid = false;
      }
      
      // Validar tel√©fono
      if (!validatePhone(telefonoInput.value.trim())) {
        showError(telefonoInput, 'telefono-error', 'Ingresa un tel√©fono v√°lido (m√≠nimo 10 d√≠gitos)');
        isValid = false;
      }
      
      // Validar mensaje
      if (mensajeInput.value.trim().length < 10) {
        showError(mensajeInput, 'mensaje-error', 'El mensaje debe tener al menos 10 caracteres');
        isValid = false;
      }
      
      if (!isValid) {
        // Scroll al primer error
        const firstError = form.querySelector('.error') as HTMLElement;
        if (firstError) {
          firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
          (firstError as HTMLInputElement).focus();
        }
        return;
      }
      
      // Deshabilitar bot√≥n de env√≠o
      const submitBtn = form.querySelector('.btn-submit') as HTMLButtonElement;
      const originalText = submitBtn.textContent || '';
      submitBtn.disabled = true;
      submitBtn.textContent = 'Enviando...';
      
      try {
        // Ejecutar reCAPTCHA v3 con timeout
        let recaptchaToken = '';
        try {
          // Verificar que grecaptcha est√© disponible y listo
          if (typeof (window as any).grecaptcha === 'undefined' || 
              typeof (window as any).grecaptcha.ready !== 'function' ||
              typeof (window as any).grecaptcha.execute !== 'function') {
            throw new Error('reCAPTCHA no est√° completamente cargado. Por favor, recarga la p√°gina.');
          }
          
          recaptchaToken = await Promise.race([
            new Promise<string>((resolve, reject) => {
              // Asegurarse de que grecaptcha est√© listo antes de ejecutar
              (window as any).grecaptcha.ready(() => {
                try {
                  (window as any).grecaptcha.execute(RECAPTCHA_SITE_KEY, { action: 'submit' })
                    .then((token: string) => {
                      if (!token || token.length === 0) {
                        reject(new Error('Token de reCAPTCHA vac√≠o'));
                        return;
                      }
                      console.log('‚úÖ reCAPTCHA token generado:', token.substring(0, 20) + '...');
                      resolve(token);
                    })
                    .catch((error: any) => {
                      console.error('‚ùå Error al generar token de reCAPTCHA:', error);
                      // Si el error es sobre la clave del sitio, dar un mensaje m√°s espec√≠fico
                      if (error.message && error.message.includes('site key')) {
                        reject(new Error('Clave de sitio de reCAPTCHA inv√°lida. Verifica la configuraci√≥n.'));
                      } else {
                        reject(error);
                      }
                    });
                } catch (execError: any) {
                  reject(execError);
                }
              });
            }),
            new Promise<string>((_, reject) => {
              setTimeout(() => {
                reject(new Error('Timeout: reCAPTCHA tard√≥ demasiado en responder'));
              }, 15000); // 15 segundos timeout para reCAPTCHA
            })
          ]);
        } catch (recaptchaError: any) {
          console.error('‚ùå Error al ejecutar reCAPTCHA:', recaptchaError);
          // Si el error es de clave inv√°lida, permitir enviar sin reCAPTCHA (temporalmente)
          if (recaptchaError.message?.includes('site key') || recaptchaError.message?.includes('Invalid site key')) {
            console.warn('‚ö†Ô∏è reCAPTCHA no est√° configurado correctamente para este dominio.');
            console.warn('‚ö†Ô∏è Enviando formulario sin validaci√≥n de reCAPTCHA (modo temporal).');
            recaptchaToken = ''; // Token vac√≠o - el PHP permitir√° el env√≠o temporalmente
            // Continuar con el env√≠o del formulario
          } else {
            // Para otros errores, mostrar mensaje y detener
            let errorMessage = 'Error al verificar reCAPTCHA. ';
            if (recaptchaError.message?.includes('Timeout')) {
              errorMessage += 'reCAPTCHA tard√≥ demasiado en responder. Por favor, recarga la p√°gina e intenta nuevamente.';
            } else {
              errorMessage += 'Por favor, recarga la p√°gina e intenta nuevamente.';
            }
            showFormMessage(errorMessage, 'error');
            submitBtn.disabled = false;
            submitBtn.textContent = originalText;
            return;
          }
        }
        
        // Preparar datos del formulario
        const formData = new FormData(form);
        // Agregar token de reCAPTCHA solo si existe (puede estar vac√≠o si hay problemas de configuraci√≥n)
        if (recaptchaToken && recaptchaToken.length > 0) {
          formData.append('recaptcha_token', recaptchaToken);
          console.log('üì§ Enviando formulario CON token de reCAPTCHA');
        } else {
          formData.append('recaptcha_token', ''); // Enviar vac√≠o para que el PHP lo detecte
          console.warn('‚ö†Ô∏è Enviando formulario SIN token de reCAPTCHA (modo temporal)');
        }
        
        // Enviar datos mediante AJAX con timeout
        const controller = new AbortController();
        const timeoutId = setTimeout(() => controller.abort(), 30000); // 30 segundos timeout
        
        let response;
        try {
          response = await fetch('/send-mail.php', {
            method: 'POST',
            body: formData,
            signal: controller.signal
          });
          clearTimeout(timeoutId);
        } catch (fetchError: any) {
          clearTimeout(timeoutId);
          if (fetchError.name === 'AbortError') {
            showFormMessage('La petici√≥n tard√≥ demasiado. Por favor, verifica tu conexi√≥n e intenta nuevamente.', 'error');
          } else {
            showFormMessage('Error de conexi√≥n. Por favor, verifica tu conexi√≥n a internet e intenta nuevamente.', 'error');
          }
          submitBtn.disabled = false;
          submitBtn.textContent = originalText;
          return;
        }
        
        let result;
        try {
          const text = await response.text();
          result = JSON.parse(text);
        } catch (parseError) {
          showFormMessage('Error al procesar la respuesta del servidor. Por favor, intenta nuevamente.', 'error');
          submitBtn.disabled = false;
          submitBtn.textContent = originalText;
          return;
        }
        
        if (result.success) {
          console.log('‚úÖ Formulario enviado exitosamente');
          if (recaptchaToken && recaptchaToken.length > 0) {
            console.log('‚úÖ reCAPTCHA validado correctamente en el servidor');
          } else {
            console.warn('‚ö†Ô∏è Formulario enviado sin validaci√≥n de reCAPTCHA (modo temporal)');
          }
          // Mostrar mensaje de √©xito
          showFormMessage(result.message, 'success');
          // Limpiar formulario
          form.reset();
          // Remover clases de validaci√≥n
          form.querySelectorAll('.form-control').forEach((input) => {
            (input as HTMLElement).classList.remove('error', 'valid');
          });
          form.querySelectorAll('.form-error').forEach((error) => {
            (error as HTMLElement).textContent = '';
          });
        } else {
          console.error('‚ùå Error al enviar formulario:', result.message);
          if (result.message && result.message.includes('reCAPTCHA')) {
            console.error('‚ö†Ô∏è El problema est√° relacionado con reCAPTCHA');
          }
          // Mostrar mensaje de error
          showFormMessage(result.message || 'Error al enviar el mensaje. Por favor, intenta nuevamente.', 'error');
        }
      } catch (error: any) {
        showFormMessage('Error inesperado. Por favor, intenta nuevamente. Si el problema persiste, contacta al administrador.', 'error');
        // Asegurarse de rehabilitar el bot√≥n en caso de error
        submitBtn.disabled = false;
        submitBtn.textContent = originalText;
      } finally {
        // Rehabilitar bot√≥n (por si acaso no se hizo antes)
        if (submitBtn.disabled) {
          submitBtn.disabled = false;
          submitBtn.textContent = originalText;
        }
      }
    });
  });

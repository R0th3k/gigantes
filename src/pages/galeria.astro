---
import Main from '@/layouts/Main.astro';
import { url } from '@/utils/url';

// Crear array de 20 imágenes usando las 3 del hero (alternadas)
const heroImages = [
  '/assets/images/hero/home-1.jpg',
  '/assets/images/hero/home-2.jpg',
  '/assets/images/hero/home-3.jpg'
];

const galeriaImages = [];
for (let i = 0; i < 3; i++) {
  const imageIndex = i % heroImages.length;
  galeriaImages.push({
    src: heroImages[imageIndex],
    title: `Imagen ${i + 1} - Gigantes de Aguascalientes`,
    width: 1728,
    height: 810
  });
}
---

<Main title="Galería">
  <section class="section galeria py-5">
    <div class="container">
      <h2 class="text-primary text-center mb-5">GALERÍA</h2>
      
      <div class="row g-4" id="galeria-grid">
        {galeriaImages.map((img, index) => (
          <div class="col-md-4 col-sm-6 galeria-item">
            <a 
              href={url(img.src)} 
              class="galeria-link"
              data-pswp-width={img.width}
              data-pswp-height={img.height}
              data-cropped="true"
              target="_blank"
            >
              <img 
                src={url(img.src)} 
                alt={img.title}
                class="galeria-image"
                loading="lazy"
              />
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>
</Main>

<!-- PhotoSwipe CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/photoswipe/5.4.4/photoswipe.min.css">

<!-- PhotoSwipe Core JS (necesario para Lightbox) -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/photoswipe/5.4.4/umd/photoswipe.umd.min.js"></script>

<!-- PhotoSwipe Lightbox JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/photoswipe/5.4.4/umd/photoswipe-lightbox.umd.min.js"></script>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    // Esperar a que PhotoSwipeLightbox esté disponible
    const initGallery = () => {
      if (typeof PhotoSwipeLightbox === 'undefined' || typeof PhotoSwipe === 'undefined') {
        setTimeout(initGallery, 100);
        return;
      }
      
      // Inicializar PhotoSwipe Lightbox
      const lightbox = new PhotoSwipeLightbox({
        gallery: '#galeria-grid',
        children: 'a.galeria-link',
        pswpModule: PhotoSwipe,
        bgOpacity: 0.9,
        showHideAnimationType: 'fade',
        spacing: 0.1
      });
      
      lightbox.init();
    };
    
    initGallery();
  });
</script>

<style>
  .galeria {
    min-height: 60vh;
  }
  
  .galeria h2 {
    font-family: "Bebas Neue", sans-serif;
    font-size: 3rem;
    text-transform: uppercase;
    letter-spacing: 3px;
  }
  
  .galeria-item {
    position: relative;
    overflow: hidden;
    border-radius: 10px;
    cursor: pointer;
    transition: transform 0.3s ease;
  }
  
  .galeria-item:hover {
    transform: translateY(-5px);
  }
  
  .galeria-link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
  }
  
  .galeria-image {
    width: 100%;
    height: 300px;
    object-fit: cover;
    border-radius: 10px;
    transition: transform 0.3s ease, filter 0.3s ease;
  }
  
  .galeria-item:hover .galeria-image {
    transform: scale(1.05);
    filter: brightness(1.1);
  }
  
  @media (max-width: 767.98px) {
    .galeria-image {
      height: 250px;
    }
  }
  
  @media (max-width: 575.98px) {
    .galeria-image {
      height: 200px;
    }
    
    .galeria h2 {
      font-size: 2.5rem;
    }
  }
</style>


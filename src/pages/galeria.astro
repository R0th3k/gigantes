---
import Main from '@/layouts/Main.astro';
import { url } from '@/utils/url';
import HeroInner from '@/components/HeroInner.astro';
import fs from 'fs';
import path from 'path';

// Dimensiones de las imágenes: 1080 x 1035
const IMAGE_WIDTH = 1080;
const IMAGE_HEIGHT = 1350;

// Obtener todas las imágenes de la carpeta galeria
const galeriaPath = path.join(process.cwd(), 'public', 'assets', 'images', 'galeria');
const imageFiles = fs.readdirSync(galeriaPath)
  .filter(file => file.endsWith('.jpg') || file.endsWith('.jpeg') || file.endsWith('.png'))
  .sort((a, b) => {
    // Ordenar numéricamente: 2.jpg, 3.jpg, ..., 16.jpg
    const numA = parseInt(a.replace(/\D/g, '')) || 0;
    const numB = parseInt(b.replace(/\D/g, '')) || 0;
    return numA - numB;
  });

const galeriaImages = imageFiles.map((file, index) => ({
  src: `/assets/images/galeria/${file}`,
  title: `Gigantes de Aguascalientes - ${file}`,
  width: IMAGE_WIDTH,
  height: IMAGE_HEIGHT
}));
---

<Main title="Galería">
  <section class="section galeria py-5">
    <HeroInner 
    image="/assets/images/hero/galeria.jpg" 
    title="Galería" 
    textColor="white" 
                    />
    <div class="container mt-5">
      
      
      <div class="row g-4" id="galeria-grid">
        {galeriaImages.map((img, index) => (
          <div class="col-md-3 col-sm-6 galeria-item">
            <a 
              href={url(img.src)} 
              class="galeria-link"
              data-pswp-width={img.width}
              data-pswp-height={img.height}
              data-pswp-src={url(img.src)}
            >
              <img 
                src={url(img.src)} 
                alt={img.title}
                class="galeria-image"
                loading="lazy"
              />
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>
</Main>

<!-- PhotoSwipe CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/photoswipe/5.4.4/photoswipe.min.css">

<!-- PhotoSwipe Core JS (necesario para Lightbox) -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/photoswipe/5.4.4/umd/photoswipe.umd.min.js"></script>

<!-- PhotoSwipe Lightbox JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/photoswipe/5.4.4/umd/photoswipe-lightbox.umd.min.js"></script>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    // Esperar a que PhotoSwipeLightbox esté disponible
    const initGallery = () => {
      if (typeof PhotoSwipeLightbox === 'undefined' || typeof PhotoSwipe === 'undefined') {
        setTimeout(initGallery, 100);
        return;
      }
      
      // Inicializar PhotoSwipe Lightbox
      const lightbox = new PhotoSwipeLightbox({
        gallery: '#galeria-grid',
        children: 'a.galeria-link',
        pswpModule: PhotoSwipe,
        bgOpacity: 0.9,
        showHideAnimationType: 'fade',
        spacing: 0.1,
        // Configurar para respetar las dimensiones de las imágenes
        imageClickAction: 'close',
        tapAction: 'toggle-controls',
        doubleTapAction: 'zoom',
        // Ajustar el zoom para que las imágenes se vean completas
        maxZoomLevel: 2,
        wheelToZoom: true
      });
      
      // Configurar el tamaño de las imágenes antes de abrir
      lightbox.on('beforeOpen', () => {
        lightbox.pswp.options.imageClickAction = 'close';
      });
      
      lightbox.init();
    };
    
    initGallery();
  });
</script>

<style is:inline>
  .galeria {
    min-height: 60vh;
  }
  
  .galeria h2 {
    font-family: "Bebas Neue", sans-serif;
    font-size: 3rem;
    text-transform: uppercase;
    letter-spacing: 3px;
  }
  
  .galeria-item {
    position: relative;
    overflow: hidden;
    border-radius: 10px;
    cursor: pointer;
    transition: transform 0.3s ease;
  }
  
  .galeria-item:hover {
    transform: translateY(-5px);
  }
  
  .galeria-link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
  }
  
  .galeria-image {
    width: 100%;
    height: auto;
    /* aspect-ratio: 1080 / 1035; */
    object-fit: cover;
    border-radius: 10px;
    transition: transform 0.3s ease, filter 0.3s ease;
  }
  
  .galeria-item:hover .galeria-image {
    transform: scale(1.05);
    filter: brightness(1.1);
  }
  .pswp.pswp--open.pswp--has_mouse.pswp--ui-visible.pswp--zoom-allowed{
      z-index: 99999999999999!important;
  }
  /* Estilos para PhotoSwipe */
  :global(.pswp__img) {
    object-fit: contain !important;
  }
  
  :global(.pswp__zoom-wrap) {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  @media (max-width: 767.98px) {
    .galeria-image {
      /* aspect-ratio: 1080 / 1035; */
    }
  }
  
  @media (max-width: 575.98px) {
    .galeria-image {
      /* aspect-ratio: 1080 / 1035; */
    }
    
    .galeria h2 {
      font-size: 2.5rem;
    }
  }
</style>


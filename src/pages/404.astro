<style>
  .error-404 {
    padding: 3rem 0;
  }
  
  .error-404 h1 {
    font-family: "Bebas Neue", sans-serif;
    font-size: 8rem;
    line-height: 1;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.1);
  }
  
  .error-404 h2 {
    font-family: "Bebas Neue", sans-serif;
    text-transform: uppercase;
    letter-spacing: 2px;
  }
  
  @media (max-width: 767.98px) {
    .error-404 h1 {
      font-size: 5rem;
    }
    
    .error-404 {
      padding: 2rem 0;
    }
  }
</style>

